@using Vidly.Models
@model Vidly.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var clasName = Model.Customers.Count > 1 ? "popular" : null;
}
<h2 class="@clasName">@Model.Movie.Name</h2>
@if (Model.Customers.Count ==0 )
    {
     <p>No one has rented this movie before.</p>
    }
else
{
    <ul>
  
        @foreach (var customer in  Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
